pkgname=bmkfiles
pkgver=15675
pkgrel=1
pkgdesc="BSD Make"
arch=('x86_64')
url="http://openbsd.org"
license=('BSD')
groups=('base') 
makedepends=('bmake' 'libbsd')
provides=()
source=($pkgname.tar.gz)

package() {
  export DESTDIR=$pkgdir
  export BINDIR=/bin
  export MANDIR=/usr/share/man
  cd $srcdir/$pkgname
  bmake install
}

sha1sums=('05e10e100c11eb1920257babbba077e88c19021b')
