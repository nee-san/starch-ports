pkgname=bmkfiles
pkgver=15678
pkgrel=1
pkgdesc="BSD Make"
arch=('x86_64')
url="http://openbsd.org"
license=('BSD')
groups=('base') 
makedepends=('bmake' 'libbsd')
provides=()
source=($pkgname.tar.gz)

package() {
  export DESTDIR=$pkgdir
  export BINDIR=/bin
  export MANDIR=/usr/share/man
  cd $srcdir/$pkgname
  bmake install
}

sha1sums=('b798175d213b3f17288af90ce2a3f369dddf9ef1')
