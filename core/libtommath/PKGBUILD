pkgname=libtommath
pkgver=0.42.0
pkgrel=1
pkgdesc="Big number library"
arch=('x86_64')
url="http://libtom.org/"
license=('Nil')
groups=('base')
makedepends=('gmake')
source=(http://libtom.org/files/ltm-$pkgver.tar.bz2)

build() {
  cd "$srcdir/$pkgname-$pkgver"
  gmake
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  gmake DESTDIR="$pkgdir/" install
}

sha1sums=('9b192701cf62b85e9bd65fbb4d622d04cfa5ee0d')
